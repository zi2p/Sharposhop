<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Sharposhop.AvaloniaUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:Sharposhop.AvaloniaUI.Views"
        xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Sharposhop.AvaloniaUI.Views.MainWindow"
        Icon="/Assets/logo.SH.SH.ico"
        Title="Sharposhop.AvaloniaUI">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    
    <Panel>
        <StackPanel ZIndex="10" 
                    Orientation="Vertical" 
                    IsVisible="{Binding !IsEnabled}" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            
            <progRing:ProgressRing Width="20"
                                   Height="20"
                                   HorizontalAlignment="Right"
                                   Margin="5,5,5,5"
                                   IsActive="True"
                                   Foreground="Red" />
        </StackPanel>
        
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
            
                <Menu>
                    <MenuItem Header="_File">
                        <MenuItem Header="_Open" Click="LoadFileButton_OnClick"/>
                        <MenuItem Header="_Save">
                            <MenuItem Header="_BMP" Click="SaveFileBmpButton_Clicked"/>
                            <MenuItem Header="_PNM P5" Click="SaveFileP5Button_Clicked"/>
                            <MenuItem Header="_PNM P6" Click="SaveFileP6Button_Clicked"/>
                        </MenuItem>
                    </MenuItem>
                </Menu>
            
            </StackPanel>
        
            <Image Source="{Binding ImageViewModel.Bitmap}" Stretch="Uniform" StretchDirection="DownOnly"/>
        </StackPanel>
    </Panel>

</Window>