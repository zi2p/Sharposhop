<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:layers="clr-namespace:Sharposhop.AvaloniaUI.ViewModels.Layers"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sharposhop.AvaloniaUI.Views.Layers.ParameterlessLayerView">
    <Design.DataContext>
        <layers:ParameterlessLayerViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*"
          ColumnDefinitions="*,*,Auto">

        <TextBlock Text="{Binding Name}" />

        <Button Grid.Column="2" Grid.Row="0" Click="Remove">
            X
        </Button>

    </Grid>
</UserControl>