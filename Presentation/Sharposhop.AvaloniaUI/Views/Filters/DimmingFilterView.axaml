<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Sharposhop.AvaloniaUI.ViewModels.Filters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Sharposhop.AvaloniaUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sharposhop.AvaloniaUI.Views.Filters.DimmingFilterView">


    <Design.DataContext>
        <vm:DimmingFilterViewModel />
    </Design.DataContext>

    <StackPanel Name="Panel"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Margin="5 0 5 0">
        <TextBlock Text="{Binding Name}" />
        <TextBox Text="{Binding Value}" />
    </StackPanel>

</UserControl>